{
    "name": "d4ve-r/bcf-php",
    "description": "BCF client for PHP",
    "keywords": [
        "D4ve-R",
        "bcf-php"
    ],
    "homepage": "https://github.com/d4ve-r/bcf-php",
    "license": "MIT",
    "authors": [
        {
            "name": "David Rechkemmer",
            "email": "david.rechkemmer@googlemail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "saloonphp/saloon": "^3.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "D4veR\\BcfPhp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "D4veR\\BcfPhp\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
